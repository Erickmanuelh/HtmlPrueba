@using HtmlHelper.Models
@model Datos

@Scripts.Render("~/bundles/jquery")


<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Home Page";
}

<form action="Resultado" method="post">

    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()



    @Html.LabelForModel("Cedula")
    @Html.TextBoxFor(x => x.Cedula, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Cedula, "", new { @style = "color:red" })<br />

    @Html.LabelForModel("Nombre")
    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Nombre, "", new { @style = "color:red" })
    <br />


    @Html.LabelForModel("Apellido")
    @Html.TextBoxFor(x => x.Apellido, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Apellido, "", new { @style = "color:red" })<br />


    @Html.LabelForModel("Edad")
    @Html.TextBoxFor(x => x.Edad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Edad, "", new { @style = "color:red" })<br />


    @Html.LabelForModel("Telefono")
    @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control" })<br />

    <!-- , new Dictionary<string, object> { { "data-val", false } } -->


    @Html.LabelForModel("Correo")
    @Html.TextBoxFor(x => x.Correo, new { @class = "form-control" })
    @Html.ValidationMessageFor(p => p.Correo, "", new { @style = "color:red" })<br />


    <br />
    @Html.LabelForModel("Genero")
    @Html.DropDownListFor(m =>m.Genero,
    new SelectList(Enum.GetValues(typeof(GeneroRef))),
      "Selecciona el genero ", new Dictionary<string, object> { { "data-val", false } }),<br />
    <br />


    @Html.Label("Estado:")<br />
    Casado:@Html.RadioButton("Estado", "Casado", new Dictionary<string, object> { { "data-val", false } })<br />
    Soltero:@Html.RadioButton("Estado", "Soltero", new Dictionary<string, object> { { "data-val", false } })<br />
    Viudo:@Html.RadioButton("Estado", "Viudo", new Dictionary<string, object> { { "data-val", false } })<br />
    UnionLibre:@Html.RadioButton("Estado", "UnionLibre", new Dictionary<string, object> { { "data-val", false } })<br />

    @Html.Label("Hobbys:")<br />
    Television:@Html.CheckBox("Jugar")<br />
    Deporte:@Html.CheckBox("Ajedrez")<br />
    Musica:@Html.CheckBox("Ejercitarse")<br />
    Libros:@Html.CheckBox("Pintar")<br />

    <input type="submit" value="Enviar" />
</form>